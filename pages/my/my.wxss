.container{
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #34243E;
}
.personal{
  height: 170rpx;
  width: 100%;
  border-bottom: 1px solid white;
  /* background-color: white; */
  display: flex;
  align-items: center;
  position: absolute;
  top:0;
}
.avatar{
  border-radius: 50%;
  overflow: hidden;
  width:120rpx;
  height:120rpx;
  margin: 0 40rpx;
 
}
.name{
  font-size:36rpx;
  flex:1;
  color:white;
}
.question{
  display: flex;
  align-items: center;
  margin-right: 16rpx;
}
.question icon{
  position: relative;
  right: -16rpx;
}
.bb{
  background-color: transparent;
  color:salmon;
  /* border: 1px solid red; */
  font-size: 32rpx;
}
.bb::after{
  border: none;
}


/* tabs */
.tabs{
  height: 80rpx;
  width: 92%;
  color:gray;
  position: absolute;
  top:188rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.active{
  color: rgb(255, 187, 0);
  font-weight: 600;
  font-size:36rpx;
}

/* scroll */
.scroll{
  width: 92%;
  border:2px solid #34243E;
  height: 112%;
  margin-top: 80rpx;
}
.scroll .item{
  background-color: white;
  border-radius: 8rpx;
  margin-bottom: 16rpx;
  padding: 16rpx 36rpx;
}
.index{
  font-size:40rpx;
  font-weight: 600;
  color: #34243E;
}
.list{
  display: flex;
  margin: 12rpx 0;
  font-size: 36rpx;
  color: #34243E;
}
.time{
  margin-right: 32rpx;
  margin-bottom: 12rpx;
  font-size: 36rpx;
  color: #34243E;
}
detail{
  flex-wrap: wrap;
  flex: 1;
  text-align: justify;
}