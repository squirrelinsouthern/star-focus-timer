/* 动画 */
@keyframes spin {
    0% {transform: rotate(0);}
    100% {transform: rotate(360deg);}
}
.spin{
    animation: spin 10s infinite linear;
}
.pause {
    animation: spin 10s infinite linear;
    animation-play-state: paused;
  }
