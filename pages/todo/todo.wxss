/* todoList */
.todoWapper{
  position: absolute;
  top:200rpx;
  height:50%;
  width: 86%;
}
.todoWapper .todoTable{
  height: 96%;
}
.todoWapper .item {
  padding: 20rpx 8rpx;
  border-bottom: 1px solid rgb(212, 212, 212);
  display: flex;
  align-items: center;
}
.todoWapper .item .checkbox{
  margin-right: 20rpx;
}
.todoWapper .item text{
  width: 82%;
  font-size: 36rpx;
  color: white;
  text-align: justify;
}
.iconDelete{
  margin-left: 20rpx;
  display: flex;
  align-items: center;
}
.yes{ visibility:visible; }
.no{ visibility:hidden;}
.active-tag{ 
  background-color:rgba(128, 128, 128, 0.3);
  }




