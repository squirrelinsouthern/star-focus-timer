
/* 问候 */
.topText{
  position: absolute;
  top:20rpx;
  left:40rpx;
  color:white;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.topText .hello{
  font-size: 56rpx;
  font-weight: 600;
}
.topText .today{
  font-size: 32rpx;
}
.cloud{
  position: absolute;
  z-index: -3;
  margin-top: -600rpx;
  width: 100%;
  height: 100%;

}



.top{
  position: absolute;
  left: 50%;
  transform: translate(-50%);
  top:300rpx;
  font-size: 40rpx;
  color:#34243E;
  font-weight: 600;
}


/* todoList */
.todoWapper{
  position: absolute;
  top:400rpx;
  height:50%;
  width: 86%;
}
.todoWapper .todoTable{
  height: 100%;
}
.todoWapper .item {
  padding: 20rpx 8rpx;
  border-bottom: 1px solid #34243E;
  display: flex;
  align-items: center;
}
.todoWapper .item .checkbox{
  margin-right: 20rpx;
}
.todoWapper .item text{
  width: 82%;
  font-size: 36rpx;
  color:#34243E;
  text-align: justify;
}
.todoWapper .item .line{
  text-decoration: line-through;
  color:#34243E;
}
.iconDelete{
  /* border:1px solid yellow; */
  width: 40rpx;
  margin-right: 4rpx;
  display: flex;
  align-items: center;
}
.yes{  display:block; }
.no{ display:none; }
.active-tag{ 
  background-color:rgb(255, 198, 77);
  }



/* 鼓励的话 */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: -150rpx;
  width: 100%;
}
.empty .todoword{
  width: 100%;
}
.empty .title {
  font-size: 48rpx;
  margin:0rpx 0 24rpx 0;
  color: rgb(255, 255, 255);
  letter-spacing:4rpx;
  font-weight: 600;
}

.empty .content {
  font-size: 36rpx;
  color: #DDD;
  text-align: center;
  letter-spacing:4rpx;
}


/* 创建按钮*/
.todobutton{
  position: absolute;
  bottom:200rpx;
}

/* 背景控制 */
.container{
  height:100vh;
  width: 100vw;
}
.backgroundColor{
  position: fixed;
  z-index: -99;
  top:0;
  height: 100%;
  width: 100%;
  background-color: #34243E;
}
.imageStyle{
  position: fixed;
  z-index: -99;
  left: 0px;
  top: 0px;
  width: 100%;
  height: 100%;
}

